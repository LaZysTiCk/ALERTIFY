<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <!-- Add your title content here if needed -->

        <!-- ðŸ†˜ Emergency Feature Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:alignmentMode="alignMargins"
            android:rowOrderPreserved="false"
            android:layout_marginBottom="5dp">

            <!-- Emergency Service Item -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:background="@drawable/roundedcorner"
                    android:src="@drawable/assest1"/>


            </LinearLayout>

            <!-- Repeat similar blocks for other services -->
        </GridLayout>

        <!-- ðŸ“˜ Appointment Banner -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/banner_bg"
            android:padding="8dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What do you need?"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="3dp"
                />
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false">

                <!-- Location Tracking -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/assest6"

                    android:padding="16dp"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/assest3"
                        android:scaleType="fitCenter"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NearBy Hospitals"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:paddingTop="8dp"/>
                </LinearLayout>

                <!-- Emergency Contact -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/assest6"
                    android:padding="16dp"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/assest4"
                        android:scaleType="fitCenter"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="First-Aid Tips"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:paddingTop="8dp"/>
                </LinearLayout>

                <!-- Shake Detection -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/assest6"
                    android:padding="16dp"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/assest5"
                        android:scaleType="fitCenter"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Need Ambulance?"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:paddingTop="8dp"/>
                </LinearLayout>

                <!-- Hospital Status -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/assest6"
                    android:padding="16dp"
                    android:layout_margin="4dp"
                    >


                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_hospital"
                        android:scaleType="fitCenter"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hospital Status"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:paddingTop="8dp"/>
                </LinearLayout>
            </GridLayout>
        </LinearLayout>

        <!-- ðŸ©º Doctor List Header -->
        <LinearLayout
            android:layout_width="375dp"
            android:layout_height="180dp">
        <!-- Add doctor list content here -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How It Works"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="6dp"

            />
        </LinearLayout>
    </LinearLayout>
</ScrollView>

